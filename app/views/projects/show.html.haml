%section#sidebar
  = render partial: "layouts/sidebar"
%div.projectShow.scrollbar
  %h4
    = @project.name
  %div.projectShowStatus
    %h6
  %div.projectShowLinks
    / %div.link= link_to 'Steps', steps_new_path
    %div.link= link_to 'Edit', @project, method: :edit
    %div.link= link_to 'Delete', @project, method: :delete, |
                          data: { confirm: 'Are you sure?' }        |
  %p
    = @project.description



  %div.projectNewDetails
    %h4 Step List
    #section
      .row#projectIdAddToList{:data => {:id => @project.id}}
        .small-9.columns
          %input#step{type: 'text', placeholder: 'Step'}
        .small-3.columns
          %input#detailsButton.button.tiny.round{type: 'button', value: "Add to List"}
      / .row
      /   .small-9.columns
      /     #section
      /       %table
      /         %th Steps
      /         %th Done?

  -if @steps
    - @steps.each do |step|
      .row#stepIdToDelete{:data => {:id => step.id}}
        .small-8.columns
          %div= step.name
        / .small-1.columns
        /   %input{type:'checkbox'}= step.checked
        .small-3.columns
          %input#deleteStepsButton.button.tiny.round{type: 'button', value: 'Delete Step'}

