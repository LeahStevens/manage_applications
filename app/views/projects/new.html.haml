%section#sidebar
  = render partial: "layouts/sidebar"
%div.projectNew
  %h2 New Project
  = form_for @project, url: {action: "create"}, html: {class: "project_form"} do |f|
    %div
      = f.label :name
      %br/
      = f.text_field :name, :autofocus => true, :autocomplete => "off"
    %div
      = f.label :description
      %br/
      = f.text_area :description, size: "60x12", :autocomplete => "off"
    / %div
    /   = f.label :icon
    /   %br/
    /   = f.text_field :icon, :autocomplete => "off"
    %div= f.submit "Create"




