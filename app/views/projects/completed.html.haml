%div.currentProjectsListing
  %h2 Completed Projects
  %table
    %tr
      %th Name
      %th Description
      %th
      %th
      %th
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= project.description
        %td= link_to 'Show', project
        / %td= link_to 'Edit', project, method: :edit
        %td= link_to 'Destroy', project, method: :delete, |
            data: { confirm: 'Are you sure?' }        |
  %br/
  = link_to "Create New", projects_new_path